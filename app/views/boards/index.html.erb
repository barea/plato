<p id="notice"><%= notice %></p>
<h1>Boards</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Organization</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.organization_id %></td>
        <td><%= board.user.email %></td>
        <!-- <td><%= link_to 'Show', board %></td> -->
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Add Card', new_card_path(board_id: board.id) %></td>
        <!-- <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>completed/total</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% board.cards.limit(5).each do |card| %>
            <tr>
              <td><%= card.name %></td>
              <td><%= card.tasks.where(status: true).count %>/<%= card.tasks.count %></td>
              <td><%= link_to 'Add Task', new_task_path(card_id: card.id) %></td>
              <td><%= link_to 'Task List', tasks_path(card_id: card.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Board', new_board_path %>