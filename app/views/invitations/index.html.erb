<p id="notice"><%= notice %></p>

<h1>Invitations</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Used by user</th>
      <th>Invited by user</th>
      <th>Expire at</th>
      <th>Orgnization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.code %></td>
        <td><%= invitation.used_by_user_id %></td>
        <td><%= invitation.invited_by_user_id %></td>
        <td><%= invitation.expire_at %></td>
        <td><%= invitation.orgnization_id %></td>
        <td><%= link_to 'Show', invitation %></td>
        <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
        <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invitation', new_invitation_path %>
