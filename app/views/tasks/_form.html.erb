<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>
  <div class="field">
    <%= form.label :card_id %>
    <%= form.hidden_field :card_id, value: task.card_id ? task.card_id : params[:card_id] %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.check_box :status %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>